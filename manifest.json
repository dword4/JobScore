{
  "manifest_version": 2,
  "name": "Job Keyword Score",
  "version": "1.0",
  "description": "Highlight and score jobs based on a list of defined keywords",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
 
  "browser_specific_settings": {
    "gecko": {
      "id": "@jobscore-data-collection-with-fallback"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
 
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/jobscore-icon.png"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["highlight.css"]
  }],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Keyword Highlighter"
  },
  
  "options_ui": {
    "page": "options.html"
  }
}
